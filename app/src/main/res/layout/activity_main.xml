<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray">

        <TextView
            android:id="@+id/top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TYPE AND RUN "
            android:textColor="@android:color/black"
            android:textSize="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_make"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top"
            android:layout_marginLeft="20dp"
            android:text="Make:"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/et_make"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_make"
            android:layout_marginLeft="20dp"
            android:hint="Manufacture name"
            android:textColorHint="@android:color/black"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tv_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_make"
            android:layout_marginLeft="20dp"
            android:text="Year:"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/et_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_year"
            android:layout_marginLeft="20dp"
            android:hint="Year manufactured"
            android:textColorHint="@android:color/black"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tv_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_year"
            android:layout_marginLeft="20dp"
            android:text="Color:"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/et_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_color"
            android:layout_marginLeft="20dp"
            android:hint="Color"
            android:textColorHint="@android:color/black"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_color"
            android:layout_marginLeft="20dp"
            android:text="Purchase price(£):"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/et_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_price"
            android:layout_marginLeft="20dp"
            android:hint="Price"
            android:textColorHint="@android:color/black"
            android:textSize="30dp" />
        ​

        <TextView
            android:id="@+id/tv_engine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_price"
            android:layout_marginLeft="20dp"
            android:text="Engine Size (litre):"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/et_engine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_engine"
            android:layout_marginLeft="20dp"
            android:hint="litre"
            android:textColorHint="@android:color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn_createcar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_engine"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="113dp"
            android:layout_marginTop="6dp"
            android:background="#8b8989"
            android:text="create car" />

        <Button
            android:id="@+id/btn_createdisel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_engine"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="222dp"
            android:layout_marginTop="5dp"
            android:background="#8b8989"
            android:text="create disel" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_createcar"
            android:background="@android:color/holo_red_light">

            <TextView
                android:id="@+id/tv_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="20dp"/>


        </ScrollView>

    </RelativeLayout>
</RelativeLayout>